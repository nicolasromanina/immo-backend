PORT=5000
MONGO_URI=mongodb://localhost:27017/immo
JWT_SECRET=your_jwt_secret
NODE_ENV=development
TRUST_PROXY=false

# ============================================
# Security & CORS
# ============================================
# CORS_ORIGIN: Ajouter ici d'autres origines personnalisées (séparé par des virgules)
# Format: https://example.com,https://another.com
# Par défaut, les suivantes sont déjà acceptées:
#   - Staging: https://client.firstimmo.wmsignaturegroup.com
#             https://admin.firstimmo.wmsignaturegroup.com
#             https://promoteur.firstimmo.wmsignaturegroup.com
#             https://auth.firstimmo.wmsignaturegroup.com
#             https://firstimmo.wmsignaturegroup.com
#   - Local dev: http://localhost:PORT et http://127.0.0.1:PORT (basé sur NODE_ENV=development)
CORS_ORIGIN=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=1000

# ============================================
# Client URLs (for emails, redirects, links)
# ============================================
CLIENT_URL=http://localhost:8083
ADMIN_URL=http://localhost:8082
PROMOTEUR_URL=http://localhost:8081
AUTH_URL=http://localhost:8080
FRONTEND_URL=http://localhost:8084

# ============================================
# Onboarding reminder offsets in minutes (comma separated). Example: "2880,1440" => 2 days, 1 day
# ============================================
ONBOARDING_REMINDER_OFFSETS=2880,1440

# ============================================
# Stripe (EUR)
# ============================================
STRIPE_SECRET_KEY=sk_test_YOUR_TEST_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET
PLATFORM_CURRENCY=EUR

# Subscription prices (cents, EUR)
PRICE_VERIFIE=1900
PRICE_PREMIUM=9900

# Boost prices (cents, EUR)
PRICE_BOOST_BASIC=4900
PRICE_BOOST_PREMIUM=9900
PRICE_BOOST_ENTERPRISE=19900

# ============================================
# Cloudinary (media upload)
# ============================================
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ============================================
# AI / Groq (writing assistant)
# ============================================
GROQ_API_KEY=gsk_your_api_key
GROQ_MODEL=llama-3.1-8b-instant

# ============================================
# Email / SMTP
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_SECURE=true
EMAIL_FROM=noreply@example.com
EMAIL_FROM_NAME=Your Platform Name
PLATFORM_NAME=Your Platform Name

# ============================================
# WhatsApp Business API
# ============================================
WHATSAPP_API_VERSION=v19.0
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_ACCESS_TOKEN=your_access_token

# ============================================
# OpenGraph / SEO
# ============================================
OG_SITE_NAME=Your Site Name
OG_BASE_URL=http://localhost:8084
OG_DEFAULT_IMAGE=http://localhost:8084/og-default.jpg

# ============================================
# Admin default (init-platform)
# ============================================
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=Admin123!
SUPPORT_EMAIL=support@example.com
SUPPORT_PASSWORD=Support123!
